{
    "parser": "babel-eslint",
    "env": {
        "browser": true,
        "es6": true
    },
    "extends": "airbnb",
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 2018,
        "sourceType": "module"
    },
    "plugins": ["react"],
    "rules": {
        "no-use-before-define": "off",
        "no-return-assign": "off",
        "react/jsx-filename-extension": "off",
        "react/prop-types": "off",
        "max-len": "off",
        "no-plusplus": "off",
        "class-methods-use-this": "off",
        "no-bitwise": "off",
        "no-alert": "off"
    }
}
